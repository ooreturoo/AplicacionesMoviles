<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/vt323</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="materialButtonStyle">@style/button_style</item>
        <item name="android:textViewStyle">@style/textView_style</item>
        <item name="editTextStyle">@style/editText_style</item>
        <item name="tabStyle">@style/tabLayout_appearance</item>
        <item name="bottomNavigationStyle">@style/bottom_menu</item>
<!--        <item name="actionBarStyle">@style/ActionBarStyle</item>-->
    </style>

    <style name="PokedexDetails" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PokedexItem" parent="PokedexDetails"/>

</resources>