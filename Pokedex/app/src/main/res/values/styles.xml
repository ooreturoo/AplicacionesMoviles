<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="textView_style" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="editText_style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="menu_logout_btn_style" parent="button_style">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="login_title_style" parent="TextAppearance.AppCompat.Display4">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabLayout_appearance" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tabs_text_size</item>
    </style>

    <style name="tabs_text_size" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="bottom_menu" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="itemIconTint">@color/navigation_bar_item_tint</item>
        <item name="itemTextColor">@color/navigation_bar_item_tint</item>

    </style>

    <style name="action_bar_style" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">?attr/colorPrimaryVariant</item>
        <item name="titleTextStyle">@style/action_bar_title_style.</item>
    </style>

    <style name="action_bar_title_style." parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">30sp</item>
    </style>


</resources>