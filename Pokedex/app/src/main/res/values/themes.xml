<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/vt323</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="materialButtonStyle">@style/button_style</item>
        <item name="android:textViewStyle">@style/textView_style</item>
        <item name="editTextStyle">@style/editText_style</item>
        <item name="tabStyle">@style/tabLayout_appearance</item>
        <item name="bottomNavigationStyle">@style/bottom_menu</item>
        <item name="actionBarStyle">@style/action_bar_style</item>


    </style>


    <style name="PokedexDetails" parent="Theme.AppCompat.Light">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PokedexItem" parent="PokedexDetails"/>


    <style name="SplashTheme" parent="Theme.Pokedex">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>


