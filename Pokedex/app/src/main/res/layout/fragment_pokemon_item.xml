<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".lists.DetailPokemonFragment">


        <ImageView
            android:id="@+id/pokemonImage"
            android:layout_width="@dimen/pokemon_item_image_size"
            android:layout_height="@dimen/pokemon_item_image_size"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:layout_marginTop="@dimen/content_vertical_margin"
            android:layout_marginBottom="@dimen/vertical_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/capturedImage"
            app:layout_constraintTop_toBottomOf="@+id/tvPokedexPokemonNum"
            app:srcCompat="@drawable/charmander"/>

        <TextView
            android:id="@+id/tvPokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/pokemonImage"
            app:layout_constraintEnd_toStartOf="@+id/imagesContainer"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/pokemonImage"
            app:layout_constraintTop_toTopOf="@+id/pokemonImage"
            tools:text="Nombre" />

        <TextView
            android:id="@+id/tvPokedexPokemonNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="@string/pokedex_number_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/imagesContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/horizontal_margin"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tvPokemonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPokemonName">

            <ImageView
                android:id="@+id/imageType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tipo_acero" />

            <ImageView
                android:id="@+id/imageType2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tipo_acero" />
        </LinearLayout>

        <ImageView
            android:id="@+id/capturedImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:src="@android:drawable/checkbox_off_background"
            app:layout_constraintBottom_toBottomOf="@+id/pokemonImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pokemonImage"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/pixel_pokeball" />

        <ImageView
            android:id="@+id/favImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/horizontal_margin"
            android:src="@android:drawable/btn_star"
            app:layout_constraintBottom_toBottomOf="@+id/tvPokedexPokemonNum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPokedexPokemonNum" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>